<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_commentItem_profileImage"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/standard_margin" />

    <TextView
        android:id="@+id/textView_commentItem_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageView_commentItem_profileImage"
        android:layout_margin="@dimen/standard_margin"
        android:layout_toLeftOf="@id/imageView_commentItem_profileImage"
        android:textSize="@dimen/large_text_size" />

    <TextView
        android:id="@+id/textView_commentItem_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_commentItem_username"
        android:layout_margin="@dimen/standard_margin"
        android:layout_toLeftOf="@id/imageView_commentItem_profileImage"
        android:textColor="@color/gray700"
        android:textSize="@dimen/x_large_text_size" />

</RelativeLayout>
